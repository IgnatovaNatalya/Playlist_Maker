<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonsStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginHorizontal">@dimen/item_padding</item>
        <item name="android:layout_marginBottom">@dimen/item_padding</item>
        <item name="background">@drawable/bg_rounded_radius_l</item>
        <item name="android:background">@drawable/bg_rounded_radius_l</item>

        <item name="android:elegantTextHeight">true</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/ys_text_regular</item>

        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="SettingsItemStyle">
        <item name="android:layout_marginStart">@dimen/item_padding</item>
        <item name="android:layout_marginEnd">@dimen/item_padding</item>
        <item name="android:layout_marginVertical">21dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SettingsSwitch"  parent = "Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/selector_switch_thumb</item>
        <item name="trackTint">?attr/colorSecondaryContainer</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_med</item>
    </style>



</resources>