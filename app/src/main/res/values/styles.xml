<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationView">
        <item name="android:fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="UsualButtonsStyle">
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">?attr/android:textColor</item>
        <item name="android:textColor">?attr/android:colorBackground</item>

        <item name="android:elegantTextHeight">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/ys_text_medium</item>
    </style>

    <style name="ButtonsStyle">
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">?attr/colorPrimaryContainer</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/ys_text_medium</item>
    </style>


    <style name="SettingsItemStyle">
        <item name="itemHorizontalPadding">@dimen/horizontal_padding</item>
        <item name="android:layout_marginVertical">@dimen/vertical_padding</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="SettingsSwitch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="thumbTint">@color/selector_switch_thumb</item>
        <item name="trackTint">?attr/colorSecondaryContainer</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_med</item>
        <item name="android:textColorHint">?attr/android:textColor</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="fontFamily">@font/ys_text_medium</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="titleTextColor">?attr/android:textColor</item>
        <item name="titleMarginStart">8dp</item>
        <item name="android:contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="SongTitleStyle">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_med</item>
    </style>

    <style name="PlaylistStyle">
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_little</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="BandNameStyle">
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="PlaceHolderTextStyle">
        <item name="android:textColor">?attr/android:textColor</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_text_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayerTitleStyle">
        <item name="android:textColor">?attr/android:textColor</item>
        <item name="android:textSize">22sp</item>
        <item name="fontFamily">@font/ys_text_medium</item>
    </style>

    <style name="PlayerBandStyle">
        <item name="android:textColor">?attr/android:textColor</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_text_medium</item>
    </style>

    <style name="PlayerTextInfo">
        <item name="android:textColor">?attr/android:textColor</item>
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/ys_text_regular</item>
    </style>

    <style name="PlayerTextGrey" parent="PlayerTextInfo">
        <item name="android:textColor">@color/YP_text_gray</item>
    </style>

    <style name="TabStyle">
        <item name="tabTextColor">?attr/android:textColor</item>
        <item name="tabBackground">?attr/android:colorBackground</item>
        <item name="tabIndicatorColor">?attr/android:textColor</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="fontFamily">@font/ys_text_medium</item>
    </style>

</resources>